{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/PostcardApp.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/PostcardApp.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/PostcardApp.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "gulp build",
            "command": "gulp",
            "args": [
                "default"
            ],
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/lib"
            }
        }
    ]
}